@model IEnumerable<jeweller.Models.Orders>

@{
    ViewBag.Title = "Orders";
}

<h2>Customer Orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.orders_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.order_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.orders_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order_price)
            </td>
            <td>
                @Html.ActionLink("Details", "Order_Product_Details", new { id = item.product_id })
            </td>
        </tr>
    }

</table>
